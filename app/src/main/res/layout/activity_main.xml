<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <android.support.v4.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/dl">
        <LinearLayout
            android:visibility="invisible"
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.design.widget.TabLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/tb"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@android:color/holo_blue_light"></android.support.design.widget.TabLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/vp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
            </android.support.v4.view.ViewPager>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="返回"
                android:background="@android:color/holo_blue_light"
                android:id="@+id/back"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_main"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:background="@android:color/holo_red_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:text="今日实时"/>
                <TextView
                    android:id="@+id/tv_sumBoxOffice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1000.0"
                    android:textSize="40dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="万"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="10dp"
                    android:background="@android:color/holo_blue_dark">
                    <TextView
                        android:id="@+id/power"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="排行"
                        />
                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:gravity="center"
                            android:id="@+id/tv_name"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="姓名"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:textSize="12dp"
                                android:id="@+id/tv_showDay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="上映天数"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="right"
                                android:gravity="right"
                                android:paddingLeft="5dp"
                                android:text="总票房"
                                android:textSize="12dp" />
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:id="@+id/tv_boxOffice"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:text="日票房"/>
                    <TextView
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:id="@+id/tv_boxPercent"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:text="占比"/>
                </LinearLayout>
            </LinearLayout>
            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/lv"></ListView>
        </LinearLayout>
        <LinearLayout
            android:background="@android:color/holo_blue_bright"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="start"
            android:gravity="center_horizontal"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/draw_title" />
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="其他查询"
                android:textSize="30dp"
                android:textColor="@android:color/black"/>
            <Button
                android:background="@android:color/transparent"
                android:paddingHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="单日票房"
                android:id="@+id/dayBoxOffice"
                />
            <Button
                android:background="@android:color/transparent"
                android:paddingHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="单周票房"
                android:id="@+id/weekBoxOffice"
                />

            <Button
                android:id="@+id/weekendBoxOffice"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@android:color/transparent"
                android:paddingHorizontal="10dp"
                android:text="周末票房" />

            <Button
                android:id="@+id/monthBoxOffice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:paddingHorizontal="10dp"
                android:text="单月票房" />
            <Button
                android:background="@android:color/transparent"
                android:paddingHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="年度票房"
                android:id="@+id/yearBoxOffice"
                />
            <Button
                android:background="@android:color/transparent"
                android:paddingHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="全球票房"
                android:id="@+id/worldwideBoxOffice"
                />
        </LinearLayout>
    </android.support.v4.widget.DrawerLayout>

</android.support.constraint.ConstraintLayout>